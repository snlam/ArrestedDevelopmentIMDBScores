install.packages("gplots")
library(gplots)
install.packages("readxl")
library(readxl)
ADEpScores <- read_excel("C:\\Users\\Asus\\Desktop\\R\\Projects\\ADEpScores.xlsx")
View(ADEpScores)

View(ADEpScores)
rownames(ADEpScores)
colnames(ADEpScores)
ADEpScores <- as.matrix(ADEpScores)
mode(ADEpScores) <- 'numeric'
typeof(ADEpScores)

myColors <- colorRampPalette(c("red", "yellow", "darkgreen"))

# Heatmap
heatmap.2(ADEpScores, scale = "column", xlab = "Season", ylab = "Episode Number", main = "Arrested Development IMDB Ratings", col = myColors(256), dendrogram = "none", Rowv = NA, Colv = NA, cellnote = ADEpScores, notecex = 0.7, notecol = "black", trace='none')
legend(x = "left", legend = c("worst", "average", "best"), fill = c("red", "yellow", "darkgreen"))

# Barplot
ADEpScoresAvgs = c(mean(ADEpScores_df[, 1], na.rm = TRUE))
for (i in 2:5) {
  ADEpScoresAvgs <- append(ADEpScoresAvgs, mean(ADEpScores_df[, i], na.rm = TRUE))
}
barplot(ADEpScoresAvgs, xlab = "Season", ylab = "IMDB Rating Out Of 10", main = "Arrested Development IMDB Average Season Ratings", col = rainbow(5), ylim = c(0,10))
# add values above bars
text(x, ADEpScoresAvgs + 0.5, labels=as.character(round(ADEpScoresAvgs, 1)), fontweight = "bold")
